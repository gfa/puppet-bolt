# This file is managed by Puppet.
#
# Configuration for getaddrinfo(3).
#
# label   <mask>   <value>
#    Add another rule to the RFC 3484 label table.
#    See section 2.1 in RFC 3484.
#
<% @label.sort_by{|_key, value| value.to_i}.each do |x| -%>
label <%= '%-24s' % x[0] -%> <%= x[1] %>
<% end -%>
#
# precedence  <mask>   <value>
#    Add another rule to the RFC 3484 precedence table.
#    See section 2.1 and 10.3 in RFC 3484.
#
<% @precedence.sort_by{|_key, value| value.to_i}.each do |x| -%>
precedence <%= '%-24s' % x[0] -%> <%= x[1] %>
<% end -%>
#
# scopev4  <mask>  <value>
#    Add another rule to the RFC 3484 scope table for IPv4 addresses.
#    See section 3.2 in RFC 3484.
#
<% @scopev4.each do |key, value| -%>
scopev4 <%= '%-24s' % key -%> <%= value %>
<% end -%>
#
# reload  <yes|no>
#    If set to yes, each getaddrinfo(3) call will check whether this file
#    changed and if necessary reload. This option should not really be
#    used.
#
<% if @reload and not @reload.empty? -%>
reload <%= @reload %>
<% end -%>
